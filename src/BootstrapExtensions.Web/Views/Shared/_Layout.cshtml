<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>@(string.IsNullOrEmpty(ViewBag.Title) ? "" : ViewBag.Title + " -") Bootstrap Extensions</title>
        @Styles.Render("~/bundle/css")

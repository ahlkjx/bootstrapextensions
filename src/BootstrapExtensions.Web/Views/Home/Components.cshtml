@using BootstrapExtensions.Base
@{
    ViewBag.Title = "Components";
}

<header class="jumbotron subhead" id="overview">
  <div class="container">
    <h1>Components</h1>
    <p class="lead">Dozens of reusable components built to provide navigation, alerts, popovers, and more.</p>
  </div>
</header>
<div class="container">
    <div class="row">
        <div class="span3 bs-docs-sidebar">
            @Html.List(nav =>
            {
                nav.Link("<i class=\"icon-chevron-right\"></i> Button groups", "#buttonGroups");
                nav.Link("<i class=\"icon-chevron-right\"></i> Navbar", "#navbar");
                nav.Link("<i class=\"icon-chevron-right\"></i> Progress bars", "#progress");
            }, new { @class="nav nav-list bs-docs-sidenav affix-top" })
        </div>
        <div class="span9">
            @Html.Partial("Components/_ButtonGroups")
            @Html.Partial("Components/_Navbar")
            @Html.Partial("Components/_ProgressBars")
        </div>
    </div>
</div>